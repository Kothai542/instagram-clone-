<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_margin="25dp"
            android:src="@drawable/home"></ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_margin="25dp"
            android:src="@drawable/search"></ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_margin="25dp"
            android:src="@drawable/reel"></ImageView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="25dp"
                android:src="@drawable/like"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="2dp"
                android:textColor="#EB164A"
                android:layout_gravity="center"></TextView>
        </LinearLayout>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="25dp"
            android:src="@drawable/your"></ImageView>
    </LinearLayout>
</LinearLayout>
